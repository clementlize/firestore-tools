{
  "name": "Firestore Tools: fullscreen browser, collapse fields",
  "description": "Simplify your life when browsing the Google Firebase-Firestore realtime database: fullscreen mode, auto-collapse fields.",
  "version": "2.1.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://console.firebase.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_title": "Firestore Tools",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/icon-16.png",
      "32": "/icons/icon-32.png",
      "48": "/icons/icon-48.png",
      "128": "/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "/icons/icon-16.png",
    "32": "/icons/icon-32.png",
    "48": "/icons/icon-48.png",
    "128": "/icons/icon-128.png"
  }
}